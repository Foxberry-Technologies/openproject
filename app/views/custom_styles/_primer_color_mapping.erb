<style type="text/css">

  /* Overwrite Primer primitives */
  [data-light-theme=light_high_contrast] {
      --body-background: var(--color-canvas-default);
      --body-font-color: var(--color-fg-default);
      --color-accent-fg: var(--content-link-color) !important;
      --button--alt-highlight-background-color: var(--color-btn-primary-bg);
      --avatar-border-color: var(--color-avatar-border);
      --input-border-default-color: var(--color-border-default) !important;
      --content-form-input-border-color: var(--color-border-default) !important;
      --full-screen-border-default-color: var(--color-border-default) !important;
      --main-menu-hover-box-shadow-color: var(--main-menu-font-color) !important;
      --content-default-border-color: var(--color-border-muted);
      --toolbar-item--border-color: var(--color-border-default);
      --button--border-color: var(--color-border-default);
      --content-form-separator-color: var(--color-border-muted);
      --table-row-border-color: var(--color-border-default);
      --list-item-hover-color: var(--color-action-list-item-default-active-border);
      --inplace-edit--border-color: var(--color-border-default);
      --ck-color-toolbar-border: var(--color-border-default);
      --ck-color-base-border: var(--color-border-default);
      --button--active-border-color: var(--color-border-default);
      --full-calendar-border-color: var(--color-border-muted);

  <% DesignColor.overwritten.each do |design_color| %>
    <% if design_color.variable == "alternative-color" %>
        --color-btn-primary-bg:  <%= design_color.hexcode %> !important;
        --color-btn-primary-hover-bg:  <%= design_color.darken 0.18 %> !important;
    <% end %>
    <% if design_color.variable == "content-link-color" %>
        --color-accent-fg: <%= design_color.hexcode %> !important;
    <% end %>
  <% end %>
  }
</style>
